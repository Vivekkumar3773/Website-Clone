extends ../includes/navigation.pug 

block styles
    link(rel="stylesheet" href="/css/product.css") 

block contents 
    if prods.length > 0
        .grid 
            each products in prods 
                article.card.product-item
                    header.card__header 
                        h1.product__title #{products.title}   
                    .card__image
                        img(src=products.imageUrl alt=products.title)
                    .card__content 
                        h2.product__price â‚¹#{products.price} 
                        p.product__description #{products.description} 
                    .card__actions
                        a.btn(href=`/index/${products.id}`) Details 
                        form(action="/cart" method="post")
                            button.btn(type="submit") Add-Cart 
                            input(type="hidden" name="productId" value=products.id)
    else 
        h1 No Products In Cart..